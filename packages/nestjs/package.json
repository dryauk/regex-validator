{
  "name": "repository-template-nestjs",
  "version": "0.1.0",
  "description": "Repository template | NestJS",
  "author": "DryAuk (https://github.com/dryauk)",
  "homepage": "https://github.com/dryauk/repository-template#readme",
  "repository": "https://github.com/dryauk/repository-template",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=16",
    "yarn": ">=1.20"
  },
  "scripts": {
    "heroku-prebuild": "npm config set '//npm.pkg.github.com/:_authToken' \"${NPM_TOKEN}\"",
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "sh -c 'node dist/main-${0}'",
    "test": "NODE_ENV=test jest --all",
    "test:cov": "NODE_ENV=test jest --all --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:e2e": "NODE_ENV=test jest --all --config ./test/jest-e2e.json",
    "lint": "yarn lint:commit && yarn lint:eslint && yarn lint:prettier",
    "lint:commit": "commitlint --from=$( git rev-list --tags --max-count=1 )",
    "lint:eslint": "eslint --quiet --no-error-on-unmatched-pattern **/*.{ts,tsx}",
    "lint:prettier": "prettier --check --no-error-on-unmatched-pattern **/*.{js,ts,tsx,md,json,yml}",
    "lint:fix": "yarn lint:fix:eslint && yarn lint:fix:prettier",
    "lint:fix:eslint": "eslint --fix --quiet --no-error-on-unmatched-pattern **/*.{ts,tsx}",
    "lint:fix:prettier": "prettier --write --no-error-on-unmatched-pattern **/*.{js,ts,tsx,md,json,yml}"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.11",
    "@nestjs/config": "^1.0.2",
    "@nestjs/core": "^8.0.11",
    "@nestjs/platform-express": "^8.0.11",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@dryauk/commitlint-config": "^2.0.0",
    "@dryauk/eslint-config": "^1.3.0",
    "@dryauk/prettier-config": "^1.2.1",
    "@dryauk/semantic-release-config": "^2.0.0",
    "@nestjs/cli": "^8.1.4",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "^8.1.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "eslint": "^8.6.0",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "semantic-release": "^18.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.4.4"
  },
  "optionalDependencies": {
    "fsevents": "*"
  },
  "commitlint": {
    "extends": "@dryauk/commitlint-config"
  },
  "release": {
    "extends": "@dryauk/semantic-release-config"
  },
  "eslintConfig": {
    "extends": "@dryauk/eslint-config"
  },
  "prettier": "@dryauk/prettier-config",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix",
    "*.{js,ts,jsx,tsx,md,json,yml,yaml}": "prettier --write"
  }
}
